<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Register Details</title>
    
</head>
<body>
    {{>navbar}}
    <h2>Please fill data in the form below:</h2>
    <form name="form1" id="form" method="POST" action="/register">
        <div class="form-group">
            <label>First Name:<input type="text" class="form-control" id="firstname" name="firstname" value=""
            placeholder="Enter First Name" onkeyup="checkfn();" required></label>
            <span id="fn_message" style="color:red"></span>  
        </div>
        <div class="form-group">
            <label>Last Name:<input type="text" class="form-control" id="lastname" name="lastname" value=""
            placeholder="Enter Last Name" onkeyup="checkln();" required></label>
            <span id="ln_message" style="color:red"></span>
        </div>
        <div class="form-group">
            <label>Mobile No:<input type="number" class="form-control" name="mobile_no" id="mobile_no" value=""
            placeholder="Enter Mobile no" onkeyup="check(); return false;"
            pattern="d{3}[-]d{3}[-]d{4}" required></label>
            <span id="message" style="color:red"></span>
        </div>
        <div class="form-group">
            <label>Email:<input type="email" class="form-control" name="email" value="" placeholder="Enter Email" required></label>
        </div>
        <div class="form-group">
            <label>Address:</label><br>
            <sub>City:<input type="text" class="form-control" id="city" name="city" value=""
            placeholder="Enter Your City" onkeyup="checkCity();" required></sub>
            <span id="c_message" style="color:red"></span>
            <sub>State:<input type="text" class="form-control" id="state" name="state" value=""
            placeholder="Enter Your State" onkeyup="checkState();" required></sub>
            <span id="s_message" style="color:red"></span>
            <sub>Country:<input type="text" class="form-control" id="country" name="country" value=""
            placeholder="Enter Your Country" onkeyup="checkCountry();" required></sub>
            <span id="co_message" style="color:red"></span>
        </div>
        <div class="form-group">
            <label>Loginid:<input type="text" class="form-control" name="loginid" value="" placeholder="Enter Login id" required></label>
        </div>
        <div class="form-group">
            <label for="password">Password:<input type="password" class="form-control" id="password"
            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[!@#$%^&*]).{8,}"
            title="Must contain at least one number and one uppercase and lowercase letter and one spacial character, and at least 8 or more characters"
            name="password" value="" placeholder="Enter Password" required></label>
            <span id="messages" style="color:red"></span>
        </div>
        <div class="form-group">
            <label>Confirm Password:<input type="password" class="form-control" id="confirmpassword"
            name="confirmpassword" value="" placeholder="Enter Confirm password" required></label>
        </div>
        <div>
            <button type="submit" id="submit" class="btn btn-default">Submit</button>
        </div>
        <script>
            function checkfn() {
                var str = document.getElementById("firstname").value;
                var alert = document.getElementById("fn_message");

                if(!((/^[a-zA-Z]+$/.test(str))|| str.length==0)) {
                    alert.style.display="block";
                    alert.innerHTML="** Only Alphabates are allowed";
                    Flag=false;
                }else {
                    alert.style.display="none";
                    Flag=true;
                }
            }

            function checkln() {
                var str = document.getElementById("lastname").value;
                var alert = document.getElementById("ln_message");

                if(!((/^[a-zA-Z]+$/.test(str))|| str.length==0)) {
                    alert.style.display="block";
                    alert.innerHTML="** Only Alphabates are allowed";
                    Flag=false;
                }else {
                    alert.style.display="none";
                    Flag=true;
                }
            }
            function check() {

                var mobile = document.getElementById('mobile_no');
                var message = document.getElementById('message');
  
                if(mobile.value.length!=10){
                    message.style.display="block";
                    message.innerHTML = "** required 10 digits";
                    Flag=false;
                }else {
                    message.style.display="none";
                    Flag=true;
                }
            }

            function checkCity() {
                var str = document.getElementById("city").value;
                var alert = document.getElementById("c_message");

                if(!((/^[a-zA-Z]+$/.test(str))|| str.length==0)) {
                    alert.style.display="block";
                    alert.innerHTML="** City name Contains only Alphabates";
                    Flag=false;
                }else {
                    alert.style.display="none";
                    Flag=true;
                }
            }

            function checkState() {
                var str = document.getElementById("state").value;
                var alert = document.getElementById("s_message");

                if(!((/^[a-zA-Z]+$/.test(str))|| str.length==0)) {
                    alert.style.display="block";
                    alert.innerHTML="** State name Contains only Alphabates";
                    Flag=false;
                }else {
                    alert.style.display="none";
                    Flag=true;
                }
            }

            function checkCountry() {
                var str = document.getElementById("country").value;
                var alert = document.getElementById("co_message");

                if(!((/^[a-zA-Z]+$/.test(str))|| str.length==0)) {
                    alert.style.display="block";
                    alert.innerHTML="** Country name Contains only Alphabates";
                    Flag=false;
                }else {
                    alert.style.display="none";
                    Flag=true;
                }
            }

            var myInput = document.getElementById("psw");
            var letter = document.getElementById("letter");
            var capital = document.getElementById("capital");
            var number = document.getElementById("number");
            var spacialchar = document.getElementById("spacialchar"); 
            var length = document.getElementById("length");

            myInput.onfocus = function() {
            document.getElementById("message").style.display = "block";
           }

            myInput.onblur = function() {
            document.getElementById("message").style.display = "none";
            }

            myInput.onkeyup = function() {
            // Validate lowercase letters
                var lowerCaseLetters = /[a-z]/g;
                if(myInput.value.match(lowerCaseLetters)) {  
                    letter.classList.remove("invalid");
                    letter.classList.add("valid");
                } else {
                    letter.classList.remove("valid");
                    letter.classList.add("invalid");
                }
                
                // Validate capital letters
                var upperCaseLetters = /[A-Z]/g;
                
                if(myInput.value.match(upperCaseLetters)) {  
                    capital.classList.remove("invalid");
                    capital.classList.add("valid");
                } else {
                    capital.classList.remove("valid");
                    capital.classList.add("invalid");
                }

                // Validate numbers
                var numbers = /[0-9]/g;
                
                if(myInput.value.match(numbers)) {  
                    number.classList.remove("invalid");
                    number.classList.add("valid");
                } else {
                    number.classList.remove("valid");
                    number.classList.add("invalid");
                }

                // Validate Sapcial character
                var spacialchars = /[!@#$%^&*]/g;
                
                if(myInput.value.match(spacialchars)) {  
                    spacialchar.classList.remove("invalid");
                    spacialchar.classList.add("valid");
                } else {
                    spacialchar.classList.remove("valid");
                    spacialchar.classList.add("invalid");
                }
                
                // Validate length
                if(myInput.value.length >= 8) {
                    length.classList.remove("invalid");
                    length.classList.add("valid");
                } else {
                    length.classList.remove("valid");
                    length.classList.add("invalid");
                }
            }
</script>
        
    </form>
</body>
</html>